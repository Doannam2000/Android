<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.7"
        android:background="@drawable/drawtext"
        android:gravity="center"
        android:hint="Tên Đăng Nhập"
        android:textColor="#000"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" >
    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:alpha="0.7"
        android:textColor="#000"
        android:background="@drawable/drawtext"
        android:gravity="center"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/drawbutton"
        android:text="Đăng Nhập"
        android:id="@+id/dangNhap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/dangKy"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/drawbutton"
        android:text="Đăng Ký"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dangNhap">
    </Button>


    <Button
        android:id="@+id/thongTin"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/drawbutton"
        android:text="Thông Tin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dangKy" />

    <Button
        android:id="@+id/huy"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/drawbutton"
        android:text="Hủy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thongTin" />
</LinearLayout>
</RelativeLayout>
